<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@profile.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esprit.controllers.ProfileController">
    <children>
        <VBox id="profileContainer" alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="100.0">
            <Label id="profileTitle" text="Profile" />
            <HBox spacing="20.0">
                <Label text="User Name:" />
                <ComboBox fx:id="userNameComboBox" />
            </HBox>
            <HBox spacing="20.0">
                <Label text="Competence Name:" />
                <ComboBox fx:id="competenceComboBox" />
            </HBox>
            <HBox spacing="20.0">
                <Label text="Niveau:" />
                <ComboBox fx:id="niveauComboBox" />
            </HBox>
            <Button text="Add" onAction="#addProfile" />
        </VBox>
    </children>
</AnchorPane>